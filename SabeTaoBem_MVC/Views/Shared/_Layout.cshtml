@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="~/Scripts/main.js"></script>
    <title>Sabe Tão Bem</title>
    @Styles.Render("~/Bundle/sass")
</head>
<body>
    <div id="bg"></div>
    <div>
        <nav>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>
                    <a href="#">Receitas</a>
                    <ul class="rec">
                        <li>@Html.ActionLink("Entradas", "RecipeByCategory", "Recipes", new { id = "1" }, null)</li>
                        <li>@Html.ActionLink("Sopas", "RecipeByCategory", "Recipes", new { id = "2" }, null)</li>
                        <li>@Html.ActionLink("Saladas", "RecipeByCategory", "Recipes", new { id = "3" }, null)</li>
                        <li>@Html.ActionLink("Carnes", "RecipeByCategory", "Recipes", new { id = "4" }, null)</li>
                        <li>@Html.ActionLink("Peixes e Mariscos", "RecipeByCategory", "Recipes", new { id = "5" }, null)</li>
                        <li>@Html.ActionLink("Petiscos", "RecipeByCategory", "Recipes", new { id = "6" }, null)</li>
                        <li>@Html.ActionLink("Acompanhamentos", "RecipeByCategory", "Recipes", new { id = "7" }, null)</li>
                        <li>@Html.ActionLink("Doces e Sobremesas", "RecipeByCategory", "Recipes", new { id = "8" }, null)</li>
                        <li>@Html.ActionLink("Todas as Receitas", "Index", "Recipes", new { id = "8" }, null)</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Dicas", "Dicas", "Dicas")</li>
                <!--<li class="search_box">
                    <input type="text" placeholder="Podemos ajudar?">
                    <i class="fas fa-search"></i>
                </li>-->                
                @if (HttpContext.Current.Session["Username"] == null)
                {
                    <li class="log">@Html.ActionLink("Login", "Login", "Login")</li>
                    <li class="log">@Html.ActionLink("Registar", "RegisterUser", "UserRegistration")</li>
                }
                else
                {
                    <li class="log">
                        <a href="#">@Session["Username"].ToString()</a>
                        <ul class="rec">
                            <li>@Html.ActionLink("As minhas receitas", "CreateRecipe", "Recipes")</li>
                            <li>@Html.ActionLink("O Meu Perfil", "User", "User", new { id = @Convert.ToInt32(Session["UserID"])}, null )</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                        </ul>
                    </li>
                }
            </ul>
        </nav>
    </div>
    <br />
    <br />

    <div class="container body-content">
        @RenderBody()
        <br />
        <br />
        <br />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - Sabe Tão Bem </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>